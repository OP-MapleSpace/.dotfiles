:root {
    --background-primary: linear-gradient(180deg, rgba(0,0,45,.75) 10%, rgba(0,0,0,1) 65%); /* Background gradient */
    --background-secondary: linear-gradient(180deg, rgba(0,0,69,.75) 10%, rgba(0,0,0,1) 65%); /* Background gradient */
    --font-primary: 'Righteous'; /* Font */
    --primary-text-color: #00ffff; /* Font color */

    --primary: 0, 0, 0;  /* Background color mainly used for popups */
